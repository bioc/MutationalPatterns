@


<<plot_contribution_nnls_grs_fig, echo=FALSE>>=
ggsave("plot_contribution_nnls_grs.pdf",
       grid.arrange(pc1, pc2, ncol = 2, widths = c(2,2)),
       width = 15,
       height = 10)
@

\begin{figure}[H]
\begin{center}
\includegraphics[width=1.0\textwidth]{plot_contribution_nnls_grs}
\end{center}
\end{figure}

